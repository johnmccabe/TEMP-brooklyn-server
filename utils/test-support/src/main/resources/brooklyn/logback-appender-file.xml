
<included>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>${logging.dir:-./}${logging.basename:-brooklyn}-tests.log</file>
    <append>true</append>
    <encoder>
      <pattern>%d %-5level %logger{30} [%thread{15}]: %msg%n</pattern>
    </encoder>
  </appender>

  <root>
    <appender-ref ref="FILE" />
  </root>

</included>
