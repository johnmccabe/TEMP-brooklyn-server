<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>brooklyn</groupId>
    <artifactId>brooklyn</artifactId>
    <packaging>pom</packaging>
    <version>0.1.0-M1-RC4-SNAPSHOT</version>
    <name>Brooklyn Top Level Project</name>
    <scm>
        <connection>scm:git:git://github.com/cloudsoft/brooklyn.git</connection>
        <developerConnection>scm:git:git@github.com:cloudsoft/brooklyn.git</developerConnection>
        <url>http://github.com/cloudsoft/brooklyn</url>
    </scm>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.2.1</version>
                <configuration>
                    <tagNameFormat>@{project.version}</tagNameFormat>
                    <arguments>-PExample,Launcher</arguments>
                </configuration>
            </plugin>
        </plugins>

        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh-external</artifactId>
                <version>1.0</version>
            </extension>
        </extensions>
    </build>

	<distributionManagement>
		<snapshotRepository>
			<id>ssh-repository</id>
			<url>scpexe://jenkins@releng3.cloudsoftcorp.com/home/jenkins/maven/snapshots</url>
		</snapshotRepository>
		<repository>
			<id>ssh-repository</id>
			<url>scpexe://jenkins@releng3.cloudsoftcorp.com/home/jenkins/maven/releases</url>
		</repository>
	</distributionManagement>

    <modules>
        <module>parent/root</module>
        <module>api</module>
        <module>test-support</module>
        <module>core</module>
        <module>extra</module>
    </modules>

    <profiles>
        <profile>
            <id>Console</id>
            <modules>
                <module>web-console</module>
            </modules>
        </profile>
        <profile>
            <id>Launcher</id>
            <modules>
                <module>web-console</module>
                <module>launcher</module>
            </modules>
        </profile>
        <profile>
            <id>Acceptance</id>
            <modules>
                <module>web-console</module>
                <module>launcher</module>
                <module>acceptance</module>
            </modules>
        </profile>
        <profile>
            <id>Example</id>
            <modules>
                <module>example</module>
            </modules>
        </profile>
    	<profile>
    		<id>External</id>
			<distributionManagement>
				<snapshotRepository>
					<id>ssh-repository</id>
					<url>scpexe://cruiser@releng1.cloudsoftcorp.com/var/www/downloads/maven2/snapshots</url>
				</snapshotRepository>
				<repository>
					<id>ssh-repository</id>
					<url>scpexe://cruiser@releng1.cloudsoftcorp.com/var/www/downloads/maven2/releases</url>
				</repository>
				<site>
					<id>developers.cloudsoftcorp.com</id>
					<url>scpexe://cruiser@releng1.cloudsoftcorp.com/var/www/downloads/autodocs/${project.version}</url>
				</site>
			</distributionManagement>
    	</profile>
    </profiles>
</project>
